<!-- Layout sidenav -->
<div id="layout-sidenav" class="<% if local_assigns[:horizontal] == true %>layout-sidenav-horizontal sidenav-horizontal container-p-x flex-grow-0<% else %>layout-sidenav sidenav-vertical<% end %> sidenav bg-sidenav-theme">

  <% if local_assigns[:horizontal] != true %>
  <!-- Brand demo (see assets/css/demo/demo.css) -->
  <div class="app-brand demo">
    <span class="app-brand-logo demo">
      <%= image_tag("MCC_logo_50x50.png", size: "32") %>
    </span>
    <a href="/" class="app-brand-text demo sidenav-text font-weight-normal ml-2">MCC</a>
    <a href="javascript:void(0)" class="layout-sidenav-toggle sidenav-link text-large ml-auto">
      <i class="ion ion-md-menu align-middle"></i>
    </a>
  </div>

  <div class="sidenav-divider mt-0"></div>
  <% end %>


  <!-- Inner -->
  <ul class="sidenav-inner<% if local_assigns[:horizontal] != true %> py-1<% end %>">

    <li class="sidenav-item<%= current_page?('/dashboard') || request.path == '/' ? ' active open' : '' %>">
      <%= link_to dashboard_path, class: "sidenav-link" do %>
        <i class="sidenav-icon ion ion-ios-desktop"></i><div>Dashboard</div>
      <% end %>
    </li>

    <li class="sidenav-item<%= current_page_path?('/dashboard/plan') ? ' active open' : '' %>">
      <%= link_to dashboard_plan_path, class: "sidenav-link sidenav-toggle" do %>
        <i class="sidenav-icon ion ion-md-journal"></i><div>Plan</div>
      <% end %>
      <ul class="sidenav-menu">
        <li class="sidenav-item<%= current_page?(dashboard_plan_path) ? ' active' : '' %>">
          <%= link_to dashboard_plan_path, class: "sidenav-link" do %>
            <div>Care Planner</div>
          <% end %>
        </li>
        <li class="sidenav-item<%= current_page?(dashboard_plan_events_path) ? ' active' : '' %>">
          <%= link_to dashboard_plan_events_path, class: "sidenav-link" do %>
            <div>Keep me Organized</div>
          <% end %>
        </li>
        <li class="sidenav-item<%= current_page?(dashboard_plan_journals_path) ? ' active' : '' %>">
          <%= link_to dashboard_plan_journals_path, class: "sidenav-link" do %>
            <div>Journals</div>
          <% end %>
        </li>
        <li class="sidenav-item">
          <%= link_to "#", class: "sidenav-link" do %>
            <div>Report Tool</div>
          <% end %>
        </li>
      </ul>
    </li>

    <li class="sidenav-item<%= current_page_path?('/dashboard/goals') ? ' active' : '' %>">
      <%= link_to dashboard_goals_path, class: "sidenav-link" do %>
        <i class="sidenav-icon ion ion-md-trophy"></i><div>Goal Centre</div>
      <% end %>
    </li>

    <li class="sidenav-item<%= current_page_path?('/dashboard/medications') ? ' active' : '' %>">
      <%= link_to dashboard_medications_path, class: "sidenav-link" do %>
        <i class="sidenav-icon ion ion-md-medical"></i><div>Medication</div>
      <% end %>
    </li>

    <!-- Place holder nav menu dropdown-->
    <li class="sidenav-item">
      <a href="javascript:void(0)" class="sidenav-link sidenav-toggle">
          <div>Help Me Track</div>
      </a>
      <ul class="sidenav-menu">
        <li class="sidenav-item">
          <%= link_to health_conditions_path, class: "sidenav-link" do %>
            <div>Your tracked items</div>
          <% end %>
        </li>
        <li class="sidenav-item">
          <%= link_to new_health_condition_path, class: "sidenav-link" do %>
            <div>Track something new</div>
          <% end %>
        </li>
      </ul>
    </li>

  </ul>
</div>
<!-- / Layout sidenav -->
