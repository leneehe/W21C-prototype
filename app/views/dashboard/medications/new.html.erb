<% content_for :styles do %>
<%= stylesheet_link_tag 'typeahead-js/typeahead.css', media: 'all' %>
<% end %>

<% content_for :scripts do %>
<!-- Dependencies -->
<%= javascript_include_tag 'typeahead-js/typeahead.js' %>
<%= javascript_include_tag 'dashboard/forms_typeahead.js' %>
<% end %>

<!--
=================================================================
**************************** CONTENT ****************************
-->
<h4 class="font-weight-bold py-3 mb-4">
  <span class="text-muted font-weight-light">My Medication /</span> Add Medication
</h4>
<%= form_for @medication, url: new_dashboard_medication_path(@medication) do |f| %>
  <div class="card mb-4">
    <div class="card-body">
      <%= f.hidden_field "med-names", id:"med-names", value: @medications %>

      <div class="form-group col-md-12">
        <%= f.label :name, "Enter your medication name", class: "form-label" %>
        <%= f.text_field :name, id: "typeahead-input", class: "form-control", autocomplete: "off" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :rx_photograph_link, "RX photograph url", class: "form-label" %>
        <%= f.text_field :rx_photograph_link, class: "form-control" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :link, "Link url", class: "form-label" %>
        <%= f.text_field :link, class: "form-control" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :strength, "Strength of medication", class: "form-label" %>
        <%= f.text_field :strength, class: "form-control" %>
      </div>

      <div class="form-group col-md-12">
        <%= f.label :description, "Description of medication", class: "form-label" %>
        <%= f.text_field :description, class: "form-control" %>
      </div>

      <div class="form-group col-md-12">
        <%= f.label :instruction, "How to take the medication", class: "form-label" %>
        <%= f.text_field :instruction, class: "form-control" %>
      </div>

      <div class="form-group col-md-6">
        <%= f.label :condition_cure, "What is the medication for?", class: "form-label" %>
        <%= f.text_field :condition_cure, class: "form-control" %>
      </div>

      <!-- Tracked Medications -->
      <%= f.fields_for :tracked_medications do |tracked_medication| %>
      <!-- <div class="col-md-12"> -->
        <%= render 'medication_fields', f: tracked_medication %>
      <!-- </div> -->
      <% end %>

      <div class="form-group col-md-12">
        <%= f.submit "Submit", class:"btn btn-default" %>
      </div>

    </div>
  </div>
<% end %>
