<h1>Keep me Organized</h1>

<!-- Event modal -->
<form class="modal modal-top fade" id="fullcalendar-default-view-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add an event</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">Ã—</button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label class="form-label">Title</label>
          <input type="text" class="form-control">
        </div>
        <div class="form-group default-style">
          <label class="form-label">Type</label>
          <select class="selectpicker" id="selectBox" onchange="changeFunc()">
            <option value="" selected>Select Type of Event</option>
            <% @legends.each do |id, class_name| %>
              <option value="<%= class_name %>"><%= EventType.find(id).name %></option>
            <% end %>
          </select>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default md-btn-flat" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary md-btn-flat">Save</button>
      </div>
    </div>
  </div>
</form>
<!-- / Event modal -->
<div class="card mb-4">
  <div class="card-header">
    <h4><i class="ion ion-md-calendar text-primary"></i>&nbsp;Event Calendar</h4>
    <!-- Event legend start -->
    <div class="col-md-5" style="float:right">
      <div class="card">
        <h6 class="card-header border-0">Event Types</h6>
        <div class="card-body p-1">
          <ul class="legend">
            <% @legends.each do |id, class_name| %>
            <li class="default-style">
              <div class="fc-event <%= class_name %>">
              </div>
              <%= EventType.find(id).name %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <!-- end of event legend -->
    Click on an empty field on the calendar to add an event.
  </div>
  <div class="card-body">
    <div id='fullcalendar-default-view'></div>
  </div>
</div>

