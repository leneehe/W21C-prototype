<!-- current Goals -->
<div class="col-lg-8">
  <div class="card mb-4">
    <div class="card-header">
      <div class="title-text">Current Goals</div>
    </div>
    <div class="card-body text-center ">
      <p>
        <% if @goals.blank? %>
          <br>You have no current goals!<br><br>
        <% end %>
        <ol>
        <% @goals.each do |goal| %>
            <li>
              <%= link_to dashboard_goal_path(goal) do %>
                <%= goal.specific_1%> â€“ <%= goal.created_at.to_formatted_s(:long)  %>
              <% end %>
            </li>
        <% end %>
        </ol>
      </p>
      <%= button_to "Add a new goal", new_dashboard_goal_path, method: :get, class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>
