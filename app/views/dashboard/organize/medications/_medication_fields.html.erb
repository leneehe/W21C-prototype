<%= f.hidden_field :user_id, value: current_user.id %>
<div class="form-group col-md-6">
  <%= f.label :prescribed_by, "Prescribed by", class: "form-label" %>
  <%= f.text_field :prescribed_by, class: "form-control" %>
</div>

<div class="form-group col-md-3">
  <%= f.label :dosage, "How many to take at each dose?", class: "form-label" %>
  <%= f.text_field :dosage, class: "form-control" %>
</div>

<div class="form-group col-md-3">
  <%= f.label :frequency, "How often to take each dose?", class: "form-label" %>
  <%= f.text_field :frequency, class: "form-control" %>
</div>

<div class="form-group col-md-12">
  <%= f.label :special_instruction, "Special Instructions", class: "form-label" %>
  <%= f.text_field :special_instruction, class: "form-control" %>
</div>
