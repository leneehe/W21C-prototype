<% content_for :styles do %>
  <%= stylesheet_link_tag 'datatables/datatables.css', media: 'all' %>
<% end %>

<% content_for :scripts do %>
  <!-- Dependencies -->
  <%= javascript_include_tag 'datatables/datatables.js' %>

  <%= javascript_include_tag 'dashboard/tables_datatables.js' %>
<% end %>

<!--
=================================================================
**************************** CONTENT ****************************
-->
<h1 class="d-inline">My Medications</h1>

  <%= button_to "Add medication", new_dashboard_organize_medication_path, :method => :get, :class => "btn btn-outline-primary", :form_class => 'd-inline' %>

<br>
<div class="table-responsive">
  <table class="datatables-medications table table-striped table-bordered">
    <thead>
      <tr>
        <th>Name</th>
        <th>Dosage</th>
        <th>Description</th>
        <th>How Many to Take at Each Dose</th>
        <th>When to Take</th>
        <th>How to Take</th>
        <th>Special Instructions</th>
        <th>Purpose</th>
        <th>Prescribed by</th>
      </tr>
    </thead>

    <tbody>
      <% @tracked_medications.each do |tracked_medication| %>
      <tr>
        <td>
          <%= link_to tracked_medication.find_name, dashboard_organize_medication_path(tracked_medication.medication_id) %>
        </td>
        <td>
          <%= tracked_medication.find_strength %>
        </td>
        <td>
          <%= tracked_medication.find_description %>
        </td>
        <td class="center">
          <%= tracked_medication.dosage %>
        </td>
        <td class="center">
          <%= tracked_medication.frequency %>
        </td>
        <td class="center">
          <%= tracked_medication.find_instruction %>
        </td>
        <td>
          <%= tracked_medication.special_instruction %>
        </td>
        <td class="center">
          <%= tracked_medication.find_condition %>
        </td>
        <td class="center">
          <%= tracked_medication.prescribed_by %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
