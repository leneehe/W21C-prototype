<h1>Track a New Condition</h1>
<%= form_for @new_user_symptom do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name,
        autofocus: true,
        placeholder: "Symptom",
        class: "form-control",
        required: true
    %>
  </div>
  <div class="form-group">
    <%= form.label :normal_range_upper %>
    <%= form.text_field :normal_range_upper,
        placeholder: "Upper Range",
        class: "form-control",
        required: true
    %>
  </div>
  <div class="form-group">
    <%= form.label :normal_range_lower %>
    <%= form.text_field :normal_range_lower,
        placeholder: "Lower Range",
        class: "form-control",
        required: true
    %>
  </div>
  <div class="form-group">
    <%= form.label :assistance_threshold %>
    <%= form.text_field :assistance_threshold,
        class: "form-control",
        required: true
    %>
  </div>

  <div class="form-group">
    <%= form.label :unit_of_measure %>
    <%= form.text_field :unit_of_measure,
        placeholder: "e.g mL",
        class: "form-control",
        required: true
    %>
  </div>

  <div class="form-group" style="margin-top: 2rem;">
    <%= form.submit class:"btn btn-outline-primary" %>
  </div>
<% end %>
