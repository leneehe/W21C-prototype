<%= form_for [@health_condition, @measurement] do |form| %>
  <div class="form-group">
    <%= form.label :severity_score %>
    <%= form.text_field :severity_score,
        autofocus: true,
        placeholder: "Severity Score",
        class: "form-control",
        required: true
    %>
  </div>
  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>