<%= form_for @new_user_condition do |form| %>
  <div class="form-group">
    <%= form.label :condition_name %>
    <%= form.text_field :condition_name,
        autofocus: true,
        placeholder: "Condition Name",
        class: "form-control",
        required: true
    %>
  </div>
  <div class="form-group">
    <%= form.label :normal_range_upper %>
    <%= form.text_field :normal_range_upper,
        placeholder: "Upper Range",
        class: "form-control",
        required: true
    %>
  </div>
  <div class="form-group">
    <%= form.label :normal_range_lower %>
    <%= form.text_field :normal_range_lower,
        placeholder: "Lower Range",
        class: "form-control",
        required: true
    %>
  </div>
  <div class="form-group">
    <%= form.label :assistance_threshold %>
    <%= form.text_field :assistance_threshold,
        class: "form-control",
        required: true
    %>
  </div>
  <div class="form-group">
    <%= form.submit %>
  </div>
<% end %>
